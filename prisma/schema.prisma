generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String   @id
  nome       String
  matricula  Int      @unique
  password   String
  permission Boolean
  created_at DateTime
  update_at  DateTime @updatedAt
  userAvata  String

  atividade Atividade[]
  Tarefas   Tarefas[]

  @@map("usuario")
}

model Tarefas {
  id         String   @id
  codigo     Int      @unique
  setor      String
  descricao  String
  created_at DateTime
  update_at  DateTime @updatedAt

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String

  atividade Atividade[]

  @@map("tarefas")
}

model Atividade {
  id                     String   @id
  index_atividade_tarefa Int
  id_documento           String?
  quantidade_de_folhas   String?
  hora_inicio            String
  hora_termino           String
  data                   String
  created_at             DateTime

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String

  Tarefas   Tarefas @relation(fields: [tarefasId], references: [id])
  tarefasId String

  @@map("atividade")
}
